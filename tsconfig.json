{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "sourceMap": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
